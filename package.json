{
  "name": "temperature-log-dashboard",
  "version": "1.0.2",
  "description": "A dashboard application to view and export historical temperature log backups.",
  "main": "dashboard.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "monitor",
    "temperature",
    "alert",
    "dashboard"
  ],
  "author": "Woliul",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.woliul.tempdashboard",
    "productName": "Temperature Dashboard",
    "icon": "./assets/tempalert.png",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "files": [
      "dashboard.js",
      "dashboard-preload.js",
      "index.html",
      "assets/**/*"
    ],
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "woliul",
        "repo": "https://github.com/woliul/tempdashboard"
      }
    ]
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "sql.js": "^1.13.0"
  }
}